
    <h2><b>Visualização dos produtos</b></h2> 
    <p>@Html.RouteLink("Voltar para a lista", "ListaProdutos")</p>
    <br />
    <div>
        <table class="table table-dark">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Nome</th>
                    <th scope="col">Quantidade</th>
                    <th scope="col">Preço</th>
                    <th scope="col">Descrição</th>
                    <th scope="col">Categoria</th>


                </tr>
            </thead>
            <tbody>
                <tr>
                    <th scope="row">@ViewBag.Produto.Id</th>
                    <td>@ViewBag.Produto.Nome</td>
                    <td>@ViewBag.Produto.Quantidade</td>
                    <td>@ViewBag.Produto.Preco</td>
                    <td>@ViewBag.Produto.Descricao</td>
                    <td>@ViewBag.Produto.Categoria.Nome</td>
                </tr>
            </tbody>
        </table>
    </div>

