
    <h2><b>Cadastro de categoria</b></h2>
    <br />
    <div class="col-lg-6">
        <form action="/Categoria/Adiciona" method="post" class="form-horizontal" id="form">
            <div class="form-group">
                <label for="nome" class="col-sm-2 control-label">Nome</label>
                <div class="col-sm-10">
                    <input id="nome" class="form-control" name="categoria.Nome" />
                </div>
            </div>
            <div class="form-group">
                <label for="descricao" class="col-sm-2 control-label">Descrição</label>
                <div class="col-sm-10">
                    <input id="descricao" class="form-control" name="categoria.Descricao" />
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Salvar</button>
        </form>
    </div>
